.yield
 %style{:type => 'text/css'}
  :sass
   .login-left
    :width 30%
    :float left
    :text-align right
   .login-right
    :width 70%
    :float right
 =form_tag "#{root_path}auth/redmine/callback" do |form|
  %fieldset
   %legend{:align => :center}= t(:login)
   - unless flash[:alert].blank?
    .error_message= flash[:alert]
   %div
    .login-left
     =label_tag :login_key, t(:key) + ":"
    .login-right
     =text_field_tag :login_key, '', {:class => :text, :placeholder => t(:input_your_key)}
    .clear
   %legend{:align => :center, :style => "width:100%"}= t(:update_your_profile)
   %div
    .login-left
     =label_tag :login_name, t(:name) + ":"
    .login-right
     =text_field_tag :login_name, '', {:class => :text}
    .clear
   %div
    .login-left
     =label_tag :image_url, t(:image_url) + ":"
    .login-right
     =text_field_tag :image_url, '', {:class => :text}
    .clear
   %div{:style => "text-align:center;margin:10px;"}
    =submit_tag t(:login), :class => "submit red button large"

